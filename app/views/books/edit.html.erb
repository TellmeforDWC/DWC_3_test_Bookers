<h2>Editing Book</h2>
<br>
<% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited form this book from being saved.
      <% @book.errors.full_messages.each do |message| %>
        <ul><%= message %></ul>
      <% end %>
    <% end %>

<%= form_with model:@book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <%= f.submit "Update Book" %>

    <% end %>

<p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>